pipeline {
    agent any
    
    stages {
        stage('Deploy App') {
            steps {
                script {
                    // Deploy the app to the default namespace
                    build job: 'DEPLOY_APP', parameters: [
                        [$class: 'StringParameterValue', name: 'DEPLOYMENT', value: 'app']
                    ]
                }
            }
        }
    }
}

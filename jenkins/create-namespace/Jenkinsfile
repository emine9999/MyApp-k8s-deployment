pipeline {
    agent any
    
    stages {
        stage('Create Namespace') {
            steps {
                script {
                    // Create the production namespace
                    sh 'kubectl create namespace production || echo "Namespace already exists"'
                }
            }
        }

        stage('Deploy App') {
            steps {
                script {
                    build job: 'DEPLOY_APP', parameters: [
                        [$class: 'StringParameterValue', name: 'DEPLOYMENT', value: 'app']
                    ]
                }
            }
        }
    }
}
